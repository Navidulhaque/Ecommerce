<script type="text/javascript">
$("#success1").delay(3000).hide(1);
$(document).ready(function() {
	let formToSubmit;
	
	$(".delete-button").on("click", function() {
		formToSubmit = $(this).closest("form");
		$("#deleteModal").modal("show");
	});
	
	$("#confirmDelete").on("click", function() {
		formToSubmit.submit();
	});
});

</script>
